{% extends "base.twig" %}
{% block content %}
<header class="site-header section-padding d-flex justify-content-center align-items-center">
                <div class="container">
                    <div class="row">

                        <div class="col-lg-10 col-12">
                            <h1>
                                <span class="d-block text-primary">I brani del momento</span>
                                <span class="d-block text-dark">tutti da ascoltare</span>
                            </h1>
                        </div>
                    </div>
                </div>
            </header>

            <section class="products section-padding">
                <div class="container">
                    <div class="row">
                        
                        <div class="col-12">
                            <h2 class="mb-5">Top hits Italia</h2>
                        </div>

                    {% for track in tracks%}
                        <div style="display:flex; flex-direction: row; align-items: center">
                            <h2 style="margin-right: 15px">{{ loop.index }}</h2>
                            <iframe style="border-radius:12px; margin: 10px 5px" src="{{ track.embedded }}?utm_source=generator" width="100%" height="152" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
                        </div>
                    {% endfor %}
                    </div>
                </div>
            </section>
{% endblock %}