{% extends "base.twig" %}
{% block content %}

            <header class="site-header section-padding d-flex justify-content-center align-items-center">
                <div class="container">
                    <div class="row">

                        <div class="col-lg-10 col-12">
                            <h1>
                                <span class="d-block text-primary">Hai bisogno di supporto?</span>
                                <span class="d-block text-dark">Siamo qui per assisterti</span>
                            </h1>
                        </div>
                    </div>
                </div>
            </header>

            <section class="faq section-padding">
                <div class="container">
                    <div class="row">
                            <h2 class="mt-5">Sui nostri <span>prodotti</span></h2>
                            <div class="accordion" id="accordionProduct">

                             {% for faq in faqs %}
                                <div class="accordion-item">
                                    <h2 class="accordion-header" id="headingFour">
                                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#accordionProduct{{ faq.id }}" aria-expanded="true" aria-controls="accordionProduct{{ faq.id }}">
                                        {{ faq.question }}
                                        </button>
                                    </h2>

                                    <div id="accordionProduct{{ faq.id }}" class="accordion-collapse collapse" aria-labelledby="headingFour" data-bs-parent="#accordionProduct">

                                        <div class="accordion-body">
                                            <p class="large-paragraph">{{ faq.answer }}</p>
                                        </div>
                                    </div>
                                </div>

                            {% endfor %}
                               
                            </div>
                        </div>
                    </div>
                </div>
            </section>
{% endblock %}
